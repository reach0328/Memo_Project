<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardView"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp"
        android:layout_height="90dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/list_img"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_where"
                android:paddingLeft="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_listdate"
                android:textAlignment="viewEnd"
                android:paddingRight="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:maxLength="8"
                android:lines="3"
                android:ellipsize="end"
                android:layout_below="@+id/textView" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_media_play"
                android:id="@+id/list_img_play"
                android:visibility="gone"
                android:layout_above="@+id/tv_listdate"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="20dp"
                app:srcCompat="@android:drawable/ic_delete"
                android:id="@+id/btn_delete"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_below="@+id/list_img_play"
                android:layout_toEndOf="@+id/list_img_play" />

            <TextView
                android:text="TextView"
                android:id="@+id/textView"
                android:paddingLeft="15dp"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_weight="53"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:gravity="top"
                android:layout_above="@+id/tv_where"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
